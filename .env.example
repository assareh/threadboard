# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
PORT=5000

# Reddit OAuth (Optional - increases rate limits)
# Get credentials from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# LLM Configuration
# Set to "true" to use Google Gemini, "false" for local LLM
USE_GEMINI=false

# Google Gemini API (if USE_GEMINI=true)
# Get API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# Local LLM URL (if USE_GEMINI=false)
# Default assumes LM Studio running locally on port 1234
# LOCAL_LLM_URL=http://127.0.0.1:1234/v1/chat/completions
